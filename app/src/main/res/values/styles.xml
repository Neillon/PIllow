<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="BorderedBottomNavigation">
        <item name="android:background">@drawable/bordered_bottom_navigation_background</item>
    </style>

    <style name="SearchViewWithoutIcon" parent="Widget.AppCompat.Light.SearchView">
        <item name="searchHintIcon">@null</item>
        <item name="searchIcon">@null</item>
        <item name="icon">@null</item>
        <item name="android:icon">@null</item>
        <item name="android:searchIcon">@null</item>
        <item name="android:searchHintIcon" tools:targetApi="lollipop_mr1">@null</item>
    </style>

    <style name="collapsingToolbarLayoutTitleColor" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="com.example.intro.AppTheme.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="com.example.intro.AppTheme.Light.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="com.example.intro.AppTheme.Light.PopupOverlay"
        parent="ThemeOverlay.AppCompat.Light" />
